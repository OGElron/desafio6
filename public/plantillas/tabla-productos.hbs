<style>
    .table td,
    .table th {
        vertical-align: middle;
    }
</style>

{{#if productos.length}}
<h2>Lista de Productos.</h2>
<div class="table-responsive">
    <table class="table table-dark">
        <tr>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Foto</th>
        </tr>
        {{#each productos}}
        <tr>
            <th>{{this.name}}</th>
            <th>{{this.price}}</th>
            <th><img src={{this.thumbnail}}></th>
        </tr>
        {{/each}}
    </table>
</div>
{{/if}}